<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F9FF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Welcome Text with Icon -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/welcome_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome Sarah!"
                android:textSize="20sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_alignParentStart="true" />

            <ImageView
                android:id="@+id/user_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/pro"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <!-- Daily Health Tip Section -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EAF0FF"
            android:padding="12dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="4dp"
            android:elevation="3dp">

            <!-- Left Icon -->
            <ImageView
                android:id="@+id/health_tip_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/light"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp" />
            <!-- Health Tip Title -->
            <TextView
                android:id="@+id/health_tip_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily Health Tip"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_toEndOf="@id/health_tip_icon"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="4dp" />

            <!-- Health Tip Description -->
            <TextView
                android:id="@+id/health_tip_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stay hydrated! Aim to drink 8 glasses of water today"
                android:textSize="13sp"
                android:textColor="#333333"
                android:layout_below="@id/health_tip_title"
                android:layout_toEndOf="@id/health_tip_icon"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="2dp" />
        </RelativeLayout>

        <!-- Feature Buttons Grid -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true"
            android:layout_marginBottom="24dp">

            <!-- Feature Card 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:background="@drawable/rounded"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="6dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/d" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter Symptoms"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- Feature Card 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:background="@drawable/rounded"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="6dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/up" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload Reports"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- Feature Card 3 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:background="@drawable/rounded"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="6dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/riskfactor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Risk Score"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- Feature Card 4 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:background="@drawable/rounded"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="6dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/his" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="History"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:textColor="#000000" />
            </LinearLayout>
        </GridLayout>

        <!-- Recent Activity Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recent Activity"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- Activity 1 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today"
                android:textColor="#666666"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Symptoms Entry"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Updated headache symptoms"
                android:textSize="13sp"
                android:textColor="#444444"
                android:layout_marginBottom="20dp" />

            <!-- Activity 2 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yesterday"
                android:textColor="#666666"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Report Upload"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Uploaded blood test results"
                android:textSize="13sp"
                android:textColor="#444444"
                android:layout_marginBottom="20dp" />

            <!-- Activity 3 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 days ago"
                android:textColor="#666666"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Risk Assessment"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completed risk score evaluation"
                android:textSize="13sp"
                android:textColor="#444444"
                android:layout_marginBottom="20dp" />

            <!-- Activity 4 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 days ago"
                android:textColor="#666666"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Viewed History"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Checked previous entries"
                android:textSize="13sp"
                android:textColor="#444444"
                android:layout_marginBottom="20dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
