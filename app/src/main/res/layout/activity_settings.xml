<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="32dp" />

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="32dp">

            <ImageView
                android:id="@+id/btnBackFromSettings"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/back_arrow"
                android:contentDescription="@string/back"
                android:padding="4dp"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@android:color/transparent" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/settings_title"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:gravity="start"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- Profile & Account -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/section_profile_account"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="8dp" />

        <!-- Edit Profile -->
        <LinearLayout
            android:id="@+id/btnNavigateSettingsToEditProfile"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@android:color/transparent"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/profile"
                android:contentDescription="@string/desc_profile"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/edit_profile"
                android:textSize="15sp"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-medium" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_chevron_right"
                android:contentDescription="@string/desc_arrow"
                android:layout_gravity="end"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Health Data -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/section_health_data"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="8dp" />

        <!-- Google Fit Integration -->
        <LinearLayout
            android:id="@+id/btnNavigateSettingsToGoogleFit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@android:color/transparent"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/heart"
                android:contentDescription="@string/desc_google_fit"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/google_fit_integration"
                    android:textSize="15sp"
                    android:textColor="@color/text_primary"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sync_health_data"
                    android:textSize="12sp"
                    android:textColor="@color/text_pink"
                    android:fontFamily="sans-serif" />
            </LinearLayout>

            <Switch
                android:id="@+id/switchGoogleFit"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:padding="8dp"
                android:layout_gravity="center_vertical"
                android:checked="false" />
        </LinearLayout>

        <!-- EHR Synchronization -->
        <LinearLayout
            android:id="@+id/btnNavigateSettingsToEHR"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@android:color/transparent"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ehr"
                android:contentDescription="@string/desc_ehr"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ehr_synchronization"
                    android:textSize="15sp"
                    android:textColor="@color/text_primary"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/connect_health_records"
                    android:textSize="12sp"
                    android:textColor="@color/text_green"
                    android:fontFamily="sans-serif" />
            </LinearLayout>

            <Switch
                android:id="@+id/switchEHR"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:padding="8dp"
                android:layout_gravity="center_vertical"
                android:checked="false" />
        </LinearLayout>

        <!-- Privacy & Security -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/section_privacy_security"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="8dp" />

        <!-- HIPAA Compliance -->
        <LinearLayout
            android:id="@+id/btnNavigateSettingsToHIPAA"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@android:color/transparent"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/sheild"
                android:contentDescription="@string/desc_hipaa"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/hipaa_compliant"
                android:textSize="15sp"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/active"
                android:textSize="14sp"
                android:textColor="@color/text_blue"
                android:fontFamily="sans-serif-medium" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_chevron_right"
                android:contentDescription="@string/desc_arrow"
                android:layout_gravity="end"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Data Export -->
        <LinearLayout
            android:id="@+id/btnNavigateSettingsToDataExport"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@android:color/transparent"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/download_icon"
                android:contentDescription="@string/desc_data_export"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/data_export"
                android:textSize="15sp"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-medium" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_chevron_right"
                android:contentDescription="@string/desc_arrow"
                android:layout_gravity="end"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Notifications -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/section_notifications"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="8dp" />

        <!-- Health Alerts -->
        <LinearLayout
            android:id="@+id/btnNavigateSettingsToHealthAlerts"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@android:color/transparent"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/bell"
                android:contentDescription="@string/desc_health_alerts"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/health_alerts"
                android:textSize="15sp"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-medium" />

            <Switch
                android:id="@+id/switchHealthAlerts"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:padding="8dp"
                android:layout_gravity="center_vertical"
                android:checked="true" />
        </LinearLayout>

        <!-- Reminders -->
        <LinearLayout
            android:id="@+id/btnNavigateSettingsToReminders"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@android:color/transparent"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_clock"
                android:contentDescription="@string/desc_ic_clock"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/reminders"
                android:textSize="15sp"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-medium" />

            <Switch
                android:id="@+id/switchReminders"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:padding="8dp"
                android:layout_gravity="center_vertical"
                android:checked="true" />
        </LinearLayout>

        <!-- Legal & Support -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/section_legal_support"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="8dp" />

        <!-- Terms of Service -->
        <LinearLayout
            android:id="@+id/btn_terms"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@android:color/transparent"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/doc"
                android:contentDescription="@string/desc_terms"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/terms_of_service"
                android:textSize="15sp"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-medium" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_chevron_right"
                android:contentDescription="@string/desc_arrow"
                android:layout_gravity="end"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Privacy Policy -->
        <LinearLayout
            android:id="@+id/btn_privacy"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@android:color/transparent"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/sh"
                android:contentDescription="@string/desc_privacy_policy"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/privacy_policy"
                android:textSize="15sp"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-medium" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_chevron_right"
                android:contentDescription="@string/desc_arrow"
                android:layout_gravity="end"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Help & Support -->
        <LinearLayout
            android:id="@+id/btn_help"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@android:color/transparent"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/help"
                android:contentDescription="@string/desc_help_support"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/help_support"
                android:textSize="15sp"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-medium" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_chevron_right"
                android:contentDescription="@string/desc_arrow"
                android:layout_gravity="end"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- About App -->
        <LinearLayout
            android:id="@+id/btn_about"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@android:color/transparent"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/in"
                android:contentDescription="@string/desc_about"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/about_app"
                android:textSize="15sp"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-medium" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_chevron_right"
                android:contentDescription="@string/desc_arrow"
                android:layout_gravity="end"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Account Actions -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/section_account_actions"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="8dp" />

        <!-- Logout -->
        <LinearLayout
            android:id="@+id/btnNavigateSettingsToLogout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@android:color/transparent"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/logout"
                android:contentDescription="@string/desc_logout"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/logout"
                android:textSize="15sp"
                android:textColor="@color/text_red"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- Footer -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/version"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:fontFamily="sans-serif"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/build"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:fontFamily="sans-serif"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp" />
    </LinearLayout>
</ScrollView>
