<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password Reset Test - Complete Flow"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp" />

        <!-- Email Input -->
        <EditText
            android:id="@+id/emailInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter email address"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_input" />

        <!-- Step 1: Request OTP -->
        <Button
            android:id="@+id/requestOtpButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 1: Request OTP"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- OTP Input -->
        <EditText
            android:id="@+id/otpInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter OTP (6 digits)"
            android:inputType="number"
            android:maxLength="6"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_input" />

        <!-- Step 2: Verify OTP -->
        <Button
            android:id="@+id/verifyOtpButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 2: Verify OTP"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- New Password Input -->
        <EditText
            android:id="@+id/newPasswordInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter new password"
            android:inputType="textPassword"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_input" />

        <!-- Confirm Password Input -->
        <EditText
            android:id="@+id/confirmPasswordInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm new password"
            android:inputType="textPassword"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_input" />

        <!-- Step 3: Reset Password -->
        <Button
            android:id="@+id/resetPasswordButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 3: Reset Password"
            android:padding="12dp"
            android:layout_marginBottom="24dp" />

        <!-- Result Display -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Results will appear here..."
            android:textSize="16sp"
            android:gravity="center"
            android:padding="16dp"
            android:background="@drawable/bg_card_rounded"
            android:layout_marginBottom="16dp"
            android:id="@+id/resultText" />

        <!-- Instructions -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Complete Flow Test:\n1. Request OTP\n2. Verify OTP\n3. Reset Password\n\nCheck the logs for detailed information"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="#666666" />

    </LinearLayout>
</ScrollView>
