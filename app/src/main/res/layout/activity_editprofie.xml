<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="10dp" />

        <!-- Profile Picture -->
        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/oval"
                android:contentDescription="Profile Image"
                android:scaleType="centerCrop"
                android:src="@drawable/ima" />

            <ImageView
                android:id="@+id/cameraIcon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/camera"
                android:background="@drawable/oval"
                android:padding="6dp"
                android:elevation="4dp" />
        </RelativeLayout>

        <!-- Profile Completion + Percentage -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Profile Completion"
                android:textSize="14sp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/profilePercentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="80%"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#007BFF" />
        </LinearLayout>

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:progress="80"
            android:max="100"
            android:layout_marginTop="4dp"
            android:progressTint="#007BFF"
            android:backgroundTint="#E0E0E0" />

        <!-- Full Name -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/fullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sarah Johnson"
            android:background="@drawable/corner"
            android:inputType="textPersonName" />

        <!-- Email Address -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email Address"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sarah.johnson@example.com"
            android:background="@drawable/corner"
            android:inputType="textEmailAddress" />

        <!-- Phone Number -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+1 (555) 123-4567"
            android:background="@drawable/corner"
            android:inputType="phone" />

        <!-- Date of Birth -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date of Birth"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/dob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="05/12/1990"
            android:background="@drawable/corner"
            android:inputType="date" />

        <!-- Medical ID -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medical ID (Optional)"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/medicalId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter medical ID"
            android:background="@drawable/corner"
            android:inputType="text" />

        <!-- Emergency Contact Name -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Emergency Contact"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/emergencyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Michael Johnson"
            android:background="@drawable/corner"
            android:inputType="textPersonName" />

        <!-- Emergency Contact Phone -->
        <EditText
            android:id="@+id/emergencyPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+1 (555) 987-6543"
            android:background="@drawable/corner"
            android:inputType="phone"
            android:layout_marginTop="8dp" />

        <!-- Change Password -->
        <Button
            android:id="@+id/changePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:layout_marginTop="16dp"
            android:backgroundTint="#DDDDDD"
            android:textColor="#000000" />

        <!-- Save Button -->
        <Button
            android:id="@+id/saveChanges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Changes"
            android:layout_marginTop="24dp"
            android:backgroundTint="#007BFF"
            android:textColor="#FFFFFF" />

        <!-- Cancel Text -->
        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="#777777"
            android:textSize="16sp"
            android:layout_marginTop="12dp" />
    </LinearLayout>
</ScrollView>
