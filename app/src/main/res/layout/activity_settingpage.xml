<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Status Bar Placeholder -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <!-- Back Arrow with proper touch target -->
            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:id="@+id/backArrow"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@android:drawable/ic_menu_revert"
                    android:contentDescription="Back" />
            </FrameLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Settings"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1C1C1E"
                android:gravity="center"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- Health Integrations -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Health Integrations"
            android:textSize="13sp"
            android:textColor="#8E8E93"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <!-- Google Fit Integration -->
        <LinearLayout
            android:id="@+id/google"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_compass"
                android:contentDescription="Google Fit"
                android:layout_marginEnd="12dp"
                app:tint="#EC4899" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Google Fit Integration"
                    android:textSize="15sp"
                    android:textColor="#1C1C1E"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sync your health data"
                    android:textSize="12sp"
                    android:textColor="#EC4899"
                    android:fontFamily="sans-serif" />
            </LinearLayout>

            <Switch
                android:id="@+id/switchGoogleFit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:minHeight="48dp"
                android:minWidth="48dp"
                android:padding="12dp" />
        </LinearLayout>

        <!-- EHR Synchronization -->
        <LinearLayout
            android:id="@+id/ehrLayout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_agenda"
                android:contentDescription="EHR"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EHR Synchronization"
                    android:textSize="15sp"
                    android:textColor="#1C1C1E"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Connect health records"
                    android:textSize="12sp"
                    android:textColor="#22C55E"
                    android:fontFamily="sans-serif" />
            </LinearLayout>

            <Switch
                android:id="@+id/switchEHR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:minHeight="48dp"
                android:minWidth="48dp"
                android:padding="12dp" />
        </LinearLayout>

        <!-- Security & Privacy -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Security &amp; Privacy"
            android:textSize="13sp"
            android:textColor="#8E8E93"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <!-- HIPAA Compliant -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_secure"
                android:contentDescription="HIPAA"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="HIPAA Compliant"
                android:textSize="15sp"
                android:textColor="#1C1C1E"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active"
                android:textSize="14sp"
                android:textColor="#007AFF"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- Privacy Protected -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_info_details"
                android:contentDescription="Privacy"
                android:layout_marginEnd="12dp"
                app:tint="#007AFF" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Privacy Protected"
                android:textSize="15sp"
                android:textColor="#1C1C1E"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active"
                android:textSize="14sp"
                android:textColor="#007AFF"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- Legal -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Legal"
            android:textSize="13sp"
            android:textColor="#8E8E93"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <!-- Terms of Service -->
        <LinearLayout
            android:id="@+id/termsLayout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@android:drawable/ic_menu_edit"
                android:contentDescription="Terms"
                android:layout_marginEnd="12dp"
                app:tint="#1C1C1E" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terms of Service"
                android:textSize="15sp"
                android:textColor="#1C1C1E"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- Privacy Policy -->
        <LinearLayout
            android:id="@+id/privacyPolicyLayout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@android:drawable/ic_menu_info_details"
                android:contentDescription="Privacy Policy"
                android:layout_marginEnd="12dp"
                app:tint="#1C1C1E" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Privacy Policy"
                android:textSize="15sp"
                android:textColor="#1C1C1E"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- About App -->
        <LinearLayout
            android:id="@+id/aboutAppLayout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@android:drawable/ic_menu_help"
                android:contentDescription="About"
                android:layout_marginEnd="12dp"
                app:tint="#1C1C1E" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About App"
                android:textSize="15sp"
                android:textColor="#1C1C1E"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- Footer -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version 2.10"
            android:textSize="13sp"
            android:textColor="#8E8E93"
            android:fontFamily="sans-serif"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Build 2024.01.A"
            android:textSize="13sp"
            android:textColor="#8E8E93"
            android:fontFamily="sans-serif"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp" />

    </LinearLayout>
</ScrollView>
