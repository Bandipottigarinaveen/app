<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".PrivacyPolicy"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="16dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginBottom="12dp">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/back_arrow"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Privacy Policy"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <!-- Scrollable Text Body -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Privacy Policy for Oral Cancer Detection App"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your privacy is important to us. This oral cancer detection app is committed to protecting your information in accordance with HIPAA, GDPR, and other applicable regulations."
                android:textSize="14sp"
                android:textColor="#444444"
                android:layout_marginBottom="16dp"/>

            <!-- Information Collection -->
            <TextView
                android:text="Information Collection"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="We collect only the data necessary for providing accurate predictions, such as medical images, health-related inputs, and basic profile information. All data is securely stored and processed in compliance with healthcare data protection standards."
                android:textSize="14sp"
                android:textColor="#444444"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!-- Data Usage -->
            <TextView
                android:text="Data Usage"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Your data is never shared with third parties without your explicit consent. The information you provide is used solely for diagnostic purposes and improving our service quality."
                android:textSize="14sp"
                android:textColor="#444444"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!-- Data Protection -->
            <TextView
                android:text="Data Protection"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="We implement industry-standard security measures to protect your personal health information and maintain confidentiality about how your data is collected, used, and protected."
                android:textSize="14sp"
                android:textColor="#444444"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!-- Updates -->
            <TextView
                android:text="Updates to Privacy Policy"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="We may update our privacy policy from time to time. We will notify you of any changes by posting the new policy on this page."
                android:textSize="14sp"
                android:textColor="#444444"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!-- Contact Us -->
            <TextView
                android:text="Contact Us"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="For any questions or concerns, you may contact us at support@example.com through the appâ€™s Help section."
                android:textSize="14sp"
                android:textColor="#444444"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>

    <!-- Buttons Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center">

        <!-- Decline Button -->
        <Button
            android:id="@+id/btnDecline"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/text_secondary"
            android:text="Decline"
            android:textColor="#FFFFFF"/>

        <!-- Accept Button -->
        <Button
            android:id="@+id/btnAccept"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/blue"
            android:text="I Accept"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

</LinearLayout>
