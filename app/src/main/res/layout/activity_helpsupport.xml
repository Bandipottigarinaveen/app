<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Help & Support"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="16dp" />

        <!-- Subheading -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Common Questions"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="12dp" />

        <!-- FAQs... (unchanged, same as before; omitted for brevity) -->

        <!-- Upload Box Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:background="#F5F5F5"
            android:gravity="center"
            android:elevation="2dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_menu_upload"  <!-- Change to your own icon if desired -->
            android:tint="#FF5A7A"
            android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Report"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingTop="8dp"
                android:textColor="#333333" />
        </LinearLayout>

        <!-- Help Message -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Still need help?"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Weâ€™re here to support you 24/7"
            android:textSize="14sp"
            android:gravity="center"
            android:paddingBottom="16dp" />

        <!-- Chat Button -->
        <Button
            android:id="@+id/btnChatSupport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chat with Support"
            android:textAllCaps="false"
            android:backgroundTint="#FF5A7A"
            android:textColor="@android:color/white"
            android:layout_marginBottom="12dp" />

        <!-- Email Button -->
        <Button
            android:id="@+id/btnEmailUs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email Us"
            android:textAllCaps="false"
            android:backgroundTint="#EDEDED"
            android:textColor="#000000" />
    </LinearLayout>
</ScrollView>
