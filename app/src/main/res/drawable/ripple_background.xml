<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#1F000000">
    <!-- 
    To customize:
    - Change android:color to adjust ripple color (currently semi-transparent black)
    - Add android:radius to limit ripple spread
    - Add android:centerColor for different ripple behavior
    -->
    <item android:id="@android:id/mask">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
</ripple>
