<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient background -->
    <gradient
        android:type="linear"
        android:angle="270"
        android:startColor="#8B5CF6"
        android:endColor="#FBB6CE" />

    <!-- Border -->
    <stroke
        android:width="2dp"
        android:color="#6B21A8" />     <!-- Deep purple border -->

    <!-- Rounded corners -->
    <corners android:radius="24dp" />

</shape>
